<%- include('./partials/header') %>


    <hr>
    <section class="services-page3 ptb80">
        <%- include('./partials/flash') %>
        <div class="container">

            <!-- Start of Row -->
            <div class="row">

                <!-- Start of Tab Content Wrapper -->
                <div class="row tab-content custom-tabs">

                    <!-- Start of Tab 1 Content -->
                    <div role="tabpanel" class="tab-pane fade active in" id="tab">

                        <!-- Tabpanel Column -->
                        
                        <div class="col-md-12 tabpanel-col">
                            <% for(var Cotizacion of cotizacion) {%>
                                <form action="/Cotizaciones/edit/<%= Cotizacion._id %>" method="post">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <h2>Fecha:</h2>
                                        </div>
                                        <div class="col-md-4">
                                            <h3 style="font-weight:normal"><%= Cotizacion.fechaCreacion%></h3>
                                        </div>
                                    </div>

                                    <br>
                                   
                                    <div class="row">
                                        <div class="col-md-4">
                                            <h2>Nombre completo:</h2>
                                        </div>
                                        <div class="col-md-4">
                                            <h3 style="font-weight:normal"><%= Cotizacion.nombreCliente%></h3>
                                        </div>
                                    </div>

                                    <br>

                                    <div class="row">
                                        <div class="col-md-4">
                                            <h2>Teléfono:</h2>
                                        </div>
                                        <div class="col-md-4">
                                            <h3 style="font-weight:normal"><%= Cotizacion.telefono%></h3>
                                        </div>
                                    </div>

                                    <br>

                                    <div class="row">
                                        <div class="col-md-4">
                                            <h2>Correo:</h2>
                                        </div>
                                        <div class="col-md-4">
                                            <h3 style="font-weight:normal"><%= Cotizacion.correo%></h3>
                                        </div>
                                    </div>

                                    <br>
                                    
                                    <div class="row">
                                        <div class="col-md-4">
                                            <h2>Productos:</h2>
                                        </div>
                                        <div class="col-md-4">
                                            <h3 style="font-weight:normal"><%= Cotizacion.productos%></h3>
                                        </div>
                                    </div>
                                    
                                    <br>

                                    <div class="row">
                                        <div class="col-md-4">
                                            <h2>Descripción:</h2>
                                        </div>
                                        <div class="col-md-4">
                                            <h3 style="font-weight:normal"><%= Cotizacion.descripcion%></h3>
                                        </div>
                                    </div>
                                    
                                    <br>
                                    
                                    <% if (role === 'ADMIN'){ %>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <h2>Estado del ticket:</h2>
                                            </div>
                                            <div class="col-md-4">
                                                <select name="estado" id="estado" class="form-control">
                                                    <option selected hidden><%= Cotizacion.estado%></option>
                                                    <option >En progreso</option>
                                                    <option >Completado</option>
                                                    <option >Cancelado</option>
                                                </select>
                                            </div>
                                        </div>
                                    <% } else if (role === 'USER') { %>
                                        <% if (Cotizacion.estado === 'En progreso'){ %>
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <h2>Estado del ticket:</h2>
                                                </div>
                                                <div class="col-md-4">
                                                    <select name="estado" id="estado" class="form-control">
                                                        <option ><%= Cotizacion.estado%></option>
                                                        <option >Cancelado</option>
                                                    </select>
                                                </div>
                                            </div>
                                        <% } else if (Cotizacion.estado === 'Cancelado' || Cotizacion.estado === 'Completado') { %>
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <h2>Estado del ticket:</h2>
                                                </div>
                                                <div class="col-md-4">
                                                    <h3 style="font-weight:normal" name="estado"><%= Cotizacion.estado%></h3>
                                                </div>
                                            </div>
                                    <% }} %>
                                    <br>

                                    <div class="row">
                                        <div class="col-md-4">
                                            <h2>Ubicación:</h2>
                                        </div>
                                        <div class="col-md-4">
                                            <h3 style="font-weight:normal"><%= Cotizacion.ubicacion%></h3>
                                        </div>
                                    </div>
                                    <br>

                                    <div class="row">
                                        <div class="col-md-4">
                                    <a type="button" data-toggle="modal" data-target="#Actualizar" class="btn btn-border btn-dark nomargin">Actualizar</a>

                                            <a href="PerfilCotizaciones/1" class="btn btn-border btn-blue btn-blue nomargin">Regresar</a>
                                        </div>
                                    </div>
                                   
                            <% } %>
                        </div>

                    <!-- Start of Modal -->

                    <div class="modal" id="Actualizar" tabindex="-1" role="dialog">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h2 class="modal-title text-center">Actualizar</h2>
                                </div>
                                <div class="modal-body text-center">
                                    <p>¿Desea actualizar el estado del ticket?</p>
                                </div>
                                <div class="modal-footer">
                                    <input type="submit" class="btn btn-border btn-blue btn-dark nomargin" value="Actualizar" />
                                    <button type="button" class="btn btn-border btn-blue"
                                        data-dismiss="modal">Cancelar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                    <!-- End of Modal -->

                    </div>
                    <!-- End of Tab 1 Content -->

                </div>
                <!-- End of Tab Content Wrapper -->

            </div>
            <!-- End of Row -->

        </div>
    </section>


    <%- include('./partials/footer') %>