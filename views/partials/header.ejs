<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <!-- Mobile viewport optimized -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0,maximum-scale=1.0, user-scalable=no">

    <!-- Meta Tags - Description for Search Engine purposes -->
    <meta name="description" content="SafeHomeCR">
    <meta name="keywords" content="">
    <meta name="author" content="">
    <base href="/">

    <!-- Website Title -->
    <title>SafeHome</title>
    <link rel="shortcut icon" href="images/SafeHomeCRSinfondo.png" type="image/x-icon">
    <link rel="apple-touch-icon-precomposed" href="images/apple-touch-icon.png">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,400i,500,700|Roboto:400,700" rel="stylesheet">

    <!-- CSS links -->
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="css/swiper.min.css">
    <link rel="stylesheet" type="text/css" href="css/owl.carousel.min.css">
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <link rel="stylesheet" type="text/css" href="css/responsive.css">
</head>

<body>
    <!-- ===== Loader ===== -->
    <div class="loader">
        <div class="spinner">
            <div class="cloud1"><img src="images/clouds/cloud-blue.svg" alt=""></div>
            <div class="cloud2"><img src="images/clouds/cloud-green.svg" alt=""></div>
        </div>
    </div>
    <!-- ===== End of Loader ===== -->



    <!-- ===== Top Header ===== -->
    <div class="top-header">
        <div class="container">
            <div class="row">
                <!-- phone and social begin -->
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <ul class="social list-inline ptb10">
                        <li><a >2548 0137</a></li>
                        <li><a href="https://www.facebook.com/safe.homecr.7" target="_blank"><i class="fa fa-facebook"></i></a></li>
                    </ul>
                </div>
                <!-- phone and social end -->

                <!-- account button begin -->
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <ul class="top-button ptb10">
                        <li><p><%= bienvenidaNombre %> </p></li>

                        <li class="login">
                            <% if(role === '') { %>
                                <a href="Login" class="btn btn-small btn-border-rev btn-blue"><i class="fa fa-user"></i>Iniciar Sesión</a>
                            <% } else { %>
                                <a href="logout" class="btn btn-small btn-border-rev btn-blue"><i class="fa fa-user"></i>Cerrar Sesión</a>
                            <% } %>
                        </li>
                    </ul>
                <!-- account button end -->
                </div>
            </div>
        </div>
    </div>
    <!-- ===== End of Top Header ===== -->

    

    <!-- ===== Start of Header Navigation ===== -->
    <header class="fixed site-header">
        <nav class="navbar navbar-default navbar-static-top fluid_header centered">
            <div class="container">

                <!-- Logo -->
                <div class="col-md-2 col-sm-3 col-xs-3">
                    <a class="navbar-brand" href="Index"><img src="images/SafeHomeCRSinfondo.png" alt="logo"></a>
                </div>

                <!-- ======== Start of Main Menu ======== -->
                <div class="col-md-10 col-sm-9 col-xs-9">
                    <div class="navbar-header page-scroll">
                        <button type="button" class="navbar-toggle toggle-menu menu-right push-body" data-toggle="collapse" data-target="#main-nav" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>


                <div class="collapse navbar-collapse pull-right cbp-spmenu cbp-spmenu-vertical cbp-spmenu-right" id="main-nav">
                    <ul class="nav navbar-nav navbar-right">

                        <li <% if (activePage === 'Index') { %>
                            class="simple-menu active" 
                            <% } else { %> 
                            class="simple-menu"
                            <% } %>
                        >
                            <a href="Index" role="button">Inicio</a>
                        </li>

                        <li <% if (activePage === 'Acerca') { %>
                            class="simple-menu active" 
                            <% } else { %> 
                            class="simple-menu"
                            <% } %>
                        >
                            <a href="About-us" role="button">Acerca de</a>
                        </li>
                        
                        <li <% if (activePage === 'Productos') { %>
                            class="simple-menu active" 
                            <% } else { %> 
                            class="simple-menu"
                            <% } %>
                        >
                        <a 
                        <% if (role === 'ADMIN') { %>
                            href="ProductoAdmin/1" 
                        <% } else { %> 
                            href="Productos/1" 
                        <% } %> 
                            role="button">
                            Productos</a>
                        </li>
                    
                        <li <% if (activePage === 'Reparaciones') { %>
                            class="simple-menu active" 
                            <% } else { %> 
                            class="simple-menu"
                            <% } %>
                        >
                            <a href="Reparaciones" role="button">Reparaciones</a>
                        </li>

                        <li <% if (activePage === 'Cotizaciones') { %>
                            class="simple-menu active" 
                            <% } else { %> 
                            class="simple-menu"
                            <% } %>
                        >
                            <a href="Cotizaciones" role="button">Cotización</a>
                        </li>


                        <% if (role === 'ADMIN'){ %>
                        <li <% if (activePage === 'Bitacora') { %>
                            class="simple-menu active" 
                            <% } else { %> 
                            class="simple-menu"
                            <% } %>
                        >
                            <a href="Bitacora/1" role="button">Bitacora</a>
                        </li>
                        <% } %>
                        

                        <% if (role === 'ADMIN'){ %>
                        <li <% if (activePage === 'Administrador') { %>
                            class="simple-menu active" 
                            <% } else { %> 
                            class="simple-menu"
                            <% } %>
                        >
                            <a href="Administrador" role="button">Admin</a>
                        </li>
                        <% } %>

                        <li <% if (activePage === 'Perfil') { %>
                            class="simple-menu active" 
                            <% } else { %> 
                            class="simple-menu"
                            <% } %>
                        >
                            <a href="Perfil" role="button">Cuenta</a>
                        </li>

                        <!-- Start Total Cart -->
                        <% if (role === 'USER'){ %>
                        <li id="headerCart" class="total-cart">
                            <a href="Pedidos/1" class="cart">
                                <i class="fa fa-shopping-cart"></i>
                            </a>
                        </li>
                        <% } %>
                        <!-- End Total Cart -->


                        <!-- Start Notificaciones -->
                        <% if (role === 'ADMIN'){ %>
                        <li id="headerCart" class="total-cart">
                            <a href="Notificaciones/1" class="cart">
                                <i class="fa fa-bell"></i>
                                <span class="count btn btn-border btn-white">
                                    <%= numeroNot %>
                                </span>
                            </a>
                        </li>
                        <!-- End Notificaciones -->
                        <% } %>


                    </ul>
                </div>
            </div>
            <!-- ======== End of Main Menu ======== -->
            </div>
        </nav>
    </header>
    <!-- ===== End of Header Navigation ===== -->